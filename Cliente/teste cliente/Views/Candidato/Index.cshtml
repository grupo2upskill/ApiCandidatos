@model IEnumerable<teste_cliente.Models.Candidato>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Candidatos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped" style="width:100%" id="Tabela">
    <thead>
        <tr>
            <th>IdCandidato</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Morada</th>
            <th>DataNasc</th>
            <th>Foto</th>
            <th>LinkedIn</th>
            <th>Facebook</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.IdCandidato
                </td>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Telefone
                </td>
                <td>
                    @item.Morada
                </td>
                <td>
                    @item.DataNasc
                </td>
                <td>
                    @if (@item.Foto != null)
                    {
                        <img class="Foto" object-fit:cover" src="data:foto/*;base64,@(Convert.ToBase64String(@item.Foto))">
                    }
                </td>
                <td>
                    @item.LinkedIn
                </td>
                <td>
                    @item.Facebook
                </td>
                <td>
                    <div class="w-75 btn-group" role= "group">
                        <a asp-controller="Candidato" asp-action="Edit" asp-route-id="@item.IdCandidato" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Candidato" asp-action="Details" asp-route-id="@item.IdCandidato" class="btn btn-info mx-2"><i class="bi bi-trash3"></i>Detalhe</a>
                        <a asp-controller="Candidato" asp-action="Delete" asp-route-id="@item.IdCandidato" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
<script>
$(document).ready(function () {
    $('#Tabela').DataTable({
        pagingType: 'full_numbers',
    });
});
</script>
}